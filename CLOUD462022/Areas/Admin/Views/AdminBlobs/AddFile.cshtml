@model Blob

<form method="post" asp-action="AddFile" asp-controller="AdminBlobs" enctype="multipart/form-data">
    <div class="container">

        <h3>Image Folder Name - @Context.Request.Query["containerName"].ToString()</h3>

        <input hidden name="containerName" value=@Context.Request.Query["containerName"].ToString() />

        <div class="row border p-2">
            <div class="col-12 pb-2"><h4 class="text-info">Add new Image File :</h4></div>


            <div class="col-2 pt-3">
                Title:
            </div>
            <div class="col-4 pt-3">
                <input asp-for="Title" class="form-control pt-1" />
            </div>
            <div class="col-2 pt-3">
            </div>
            <div class="col-4 pt-3">
                <button type="submit" class="btn btn-success form-control">Add</button>
            </div>
            <div class="col-2 pt-3">
                Upload Image File:
            </div>
            <div class="col-4 pt-3">
                <input type="file" class="form-control pt-1" name="file" />
            </div>


        </div>
    </div>
</form>

