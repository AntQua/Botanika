@model ReflectionIT.Mvc.Paging.PagingList<CLOUD462022.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Orders</h1>

<form method="get" class="form-inline">
    <input name="filter" class="form-control" placeholder="filter"
           value="@Model.RouteValue["Filter"]" />
    <button type="submit" class="btn btn-info">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
    </button>
</form>

Total orders : @Model.TotalRecordCount

<div>
    <vc:pager paging-list="@Model"></vc:pager>
</div>


<br/>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.SortableHeaderFor(model => model.FirstName, "First Name")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CityCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDeliveryDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CityCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @String.Format("{0:dd/MM/yyyy}", item.OrderDate)
                        </td>
                        <td>
                            @String.Format("{0:dd/MM/yyyy}", item.OrderDeliveryDate)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a> |
                            <a asp-action="OrderProducts" asp-route-id="@item.OrderId">Order Products</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div>
            <vc:pager paging-list="@Model"></vc:pager>
        </div>

    </div>
</div>
