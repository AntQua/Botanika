@model Order

<div class="container marginTop1">

    <div class="jumbotron">
        <h2>@ViewBag.CheckoutFinalMessage</h2>
    </div>
    <div class="card">
        <div class="card-body">
            <p>Client : <strong>@Model.FirstName @Model.LastName</strong>
            <p>Order Date :  <strong>@Model.OrderDate</strong>
            <p>Order Number   : <strong>@Model.OrderId</strong></p>
            <table class="table">
                <tr>
                    <th></th>
                    <th>Quantity</th>
                    <th>Product</th>
                    <th>Price</th>
                </tr>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td><img src="@item.Product.ImageUrl" width="40" height="40" /></td>
                        <td>@item.Quantity</td>
                        <td>@item.Product.ProductName</td>
                        <td>@item.Product.Price</td>
                    </tr>
                }
            </table>
            <h4>Total Price: <strong>@(((decimal)ViewBag.TotalOrder).ToString("C2"))</strong></h4>
        </div>
    </div>
</div>
<div class="form-group" style="text-align :center">
    <h3>
        <a class="nav-link text-info" asp-controller="Home" asp-action="Index">Return to main page</a>
    </h3>
</div>
