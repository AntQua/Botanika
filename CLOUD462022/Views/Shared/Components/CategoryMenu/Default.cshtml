<div class="dropdown">
    <a asp-controller="Product" asp-action="List" class="dropdown-toggle"
       data-toggle="dropdown" style="color:white">Products   </a>

    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-controller="Product" asp-action="List" style="color:black"
                   asp-route-category="@category.CategoryName">@category.CategoryName</a>
            </li>
        }
        <li class="dropdown-divider"></li>
        <li>
            <a asp-controller="Product" asp-action="List" asp-route-category=""
               style="color:black">All Products</a>
        </li>
    </ul>
</div>